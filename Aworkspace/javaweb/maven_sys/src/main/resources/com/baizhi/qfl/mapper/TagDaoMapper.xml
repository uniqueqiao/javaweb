<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.qfl.dao.TagDao">

    <select id="selectAll"  resultType="Tag">
        select * from t_tag
    </select>

    <select id="queryAllClazzTag"  resultType="Tag">
        select * from t_tag where type='班级'
    </select>
    <select id="queryAllStuTag"  resultType="Tag">
        select * from t_tag where type='学生'
    </select>
    <select id="selectByNameAndType"  resultType="Tag">
        select * from t_tag where name=#{name} and type=#{type}
    </select>
    <insert id="insert" parameterType="City">
        insert into t_tag(name,type,createDate) values (#{name},#{type},#{createDate})
    </insert>
    <delete id="delete" parameterType="Integer">
        delete from t_tag where id=#{id}
    </delete>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.qfl.dao.GroupDao">
   <resultMap id="gro" type="Group">
       <id column="gid" property="id"></id>
       <result column="gname" property="name"></result>
       <result column="gcreateDate" property="createDate"></result>
       <association property="clazz" javaType="Clazz">
           <id column="cid" property="id"></id>
           <result column="cname" property="name"></result>
           <result column="cpath" property="path"></result>
           <association property="tag" javaType="Tag">
               <id column="tid" property="id"></id>
               <result column="tname" property="name"></result>
               <result column="ttype" property="type"></result>
               <result column="tcreateDate" property="createDate"></result>
           </association>
       </association>
    </resultMap>
    <select id="selectAll"  resultMap="gro">
        select g.id gid,g.name gname,g.createDate gcreateDate,
               c.id cid,c.name cname ,c.path cpath,
               t.id tid,t.name tname ,t.type ttype,t.createDate tcreateDate
        from t_group g left join t_clazz c
        on g.clazzId = c.id
        left join t_tag t on c.tagId=t.id
    </select>

    <select id="selectByNameAndCName"  resultMap="gro">
        select g.id gid,g.name gname,g.createDate gcreateDate,
               c.id cid,c.name cname ,c.path cpath,
               t.id tid,t.name tname ,t.type ttype,t.createDate tcreateDate
        from t_group g left join t_clazz c
        on g.clazzId = c.id
        left join t_tag t on c.tagId=t.id
        where g.name=#{name} and c.name=#{cname}
    </select>
    <insert id="insert" parameterType="Group">
        insert into t_group(name,createDate,clazzId) values (#{name},#{createDate},#{clazz.id})
    </insert>
    <delete id="delete" parameterType="Integer">
        delete from t_group where id=#{id}
    </delete>
</mapper>
